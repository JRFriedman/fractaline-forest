---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Fractaline Forest">
	<link href="https://fonts.googleapis.com/css2?family=Jim+Nightshade&display=swap" rel="stylesheet">
  <main>
    <h1 class="cursive">❖ Fractaline Forest ❖</h1>
	<h2 class="cursive">An interactive story based on Farcaster.</h2>

    <section id="hero">
      <img src="/images/Cover-Image.png" alt="Fractaline Forest Cover" class="background-image">
	  <section id="subscribe">
		<button>Subscribe Now</button>
	  </section>
	  <h4>Get unlimited access to all Fractaline Forest experiences, monthly airdrops, and behind-the-scenes discussions</h4>
    </section>


	  <img src="/images/Fractaline-Pattern.png" alt="Fractaline-Pattern-Image" class="pattern-image">

    <section id="characters">
      <h2 class="cursive">Meet the Main Characters</h2>
      <div class="character">
        <img src="/images/vector.png" alt="Vector">
        <h3>Vector</h3>
        <p>The adventurous wolf and forest guide.</p>
      </div>
      <div class="character">
        <img src="images/thorn.png" alt="Thorn">
        <h3>Thorn</h3>
        <p>The solemn guardian of the forest.</p>
      </div>
      <div class="character">
        <img src="/images/sylvan.png" alt="Sylvan">
        <h3>Sylvan</h3>
        <p>The oracle who remembers your path.</p>
      </div>
      <div class="character">
        <img src="/images/oran.png" alt="Oran">
        <h3>Oran</h3>
        <p>The wise keeper of wisdom and rituals.</p>
      </div>
    </section>


    <section id="subscribe">
      <button>Subscribe Now</button>
    </section>

    <footer>
      <p>&copy; 2024 Fractaline Forest. All rights reserved.</p>
    </footer>
  </main>
</Layout>

<style>
@import url('https://fonts.googleapis.com/css2?family=Jim+Nightshade&display=swap');

body {
  font-family: 'Jim Nightshade', cursive;
  background-color: #FFFFFF;
  color: #12010B;
}

header {
  background-color: #12010B;
  color: #2e3a47;
  text-align: center;
  padding: 20px 0;
}

header h1 {
  margin: 0;
  font-size: 3em; /* Default size */
  text-align: center;
  align-items: center;
  vertical-align: center;
}

h1.cursive, h2.cursive {
  font-family: 'Jim Nightshade', cursive;
  text-align: center;
}

nav ul {
  list-style: none;
  padding: 0;
  display: flex;
  justify-content: center;
  margin: 5px 0 0 0;
}

nav ul li {
  margin: 0 15px;
}

nav ul li a {
  color: #FFFFFF;
  text-decoration: none;
  font-size: 1.2em;
}

#hero {
  background: linear-gradient(
    to bottom,
    #FFFFFF, /* Darker shade from the image */
    #3e4a57 /* Lighter shade from the image */
  );
  text-align: center;
  padding: 40px 20px; /* Reduced padding */
  position: relative;
  margin-bottom: 10px; /* Reduce gap between sections */
}

.background-image {
  width: 100%;
  height: auto;
  max-width: 700px;
  margin-top: 10px;
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
  border-radius: 2px; /* Optional: Add rounded corners for a smoother look */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); /* Add shadow */
}

.middle-frame-image {
  display: block;
  margin: 0 auto; /* Center the image horizontally */
  width: 100%; /* Adjust width as needed */
  max-width: 500px; /* Control the maximum width */
  height: auto; /* Maintain aspect ratio */
}

#hero h2 {
  font-size: 1.75em;
  margin: 0;
  color: #2e3a47;
}

#hero h4 {
  font-size: 1.75em;
  font-weight: 200;
  margin: 0;
  color: white;
}

#hero p {
  font-size: 1.5em;
  color: #2e3a47;
}

section {
  padding: 60px 20px;
  text-align: center;
}

#characters .character {
  display: inline-block;
  width: 200px;
  margin: 20px;
  text-align: center;
}

#characters .character img {
  width: 100%;
  height: auto;
  border-radius: 0; /* Removed rounded corners */
}

#characters .character h3 {
  font-size: 1.5em; /* Increase font size */
  margin: 10px 0 5px 0;
}

#subscribe {
  padding: 20px 20px; /* Adjusted padding */
  text-align: center;
}

#subscribe button {
  background-color: white;
  color: black;
  border: none;
  padding: 10px 30px;
  margin-top: -20px; /* Negative margin to reduce gap */
  font-size: 1.5em;
  cursor: pointer;
  border-radius: 2px;
  font-family: 'Jim Nightshade', cursive;
}

footer {
  background-color: #1C1C1C;
  color: #E9E9DD;
  text-align: center;
  padding: 20px 0;
}

footer p {
  margin: 0;
}

/* New CSS rule for <p> elements */
p {
  font-family: 'Jim Nightshade', cursive; /* Apply font family */
  font-size: 1.5em; /* Adjust font size */
  line-height: 1.5; /* Adjust line height for better readability */
  margin-bottom: 1em; /* Add space below paragraphs */
  color: white; /* Set text color */
  text-align: center; /* Center text */
}

/* Responsive font sizes for h1 */
@media (min-width: 600px) {
  header h1 {
    font-size: 4em; /* Larger size for wider screens */
  }
}

@media (min-width: 900px) {
  header h1 {
    font-size: 5em; /* Even larger size for very wide screens */
  }
}
</style>
